    bucket = aws_s3_bucket.flemming-friday.id
    for_each = {
        
        "dancingbear.html"  = "text/html"
        
    }
    key = each.key
    source = "./${each.key}"
    content_type = each.value
    etag = filemd5("./${each.key}")
}

